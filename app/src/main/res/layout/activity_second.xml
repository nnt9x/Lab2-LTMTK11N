<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_second_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Result"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/tv_second_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_second_title"
        android:text="None"
        android:layout_marginTop="16dp"
        android:textSize="80sp"
        android:textColor="@android:color/holo_blue_light"/>

    <TextView
        android:id="@+id/tv_second_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bằng chữ: ..."
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_second_back"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_second_back"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:text="Back"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="backPreviousActivity"/>

</androidx.constraintlayout.widget.ConstraintLayout>